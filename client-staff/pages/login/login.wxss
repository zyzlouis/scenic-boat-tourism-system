/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 60rpx 40rpx;
}

.logo-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.app-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.form-section {
  flex: 1;
}

.form-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.login-button {
  margin-top: 48rpx;
}

.tips {
  text-align: center;
  margin-top: 32rpx;
  padding: 24rpx;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
}

.tips text {
  font-size: 24rpx;
  color: #ffffff;
}

.version {
  text-align: center;
  padding: 40rpx 0 20rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}
