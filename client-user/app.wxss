/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.container {
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 公共卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 公共按钮样式 */
.btn-primary {
  background-color: #1989fa !important;
  border-radius: 8rpx !important;
}

/* 价格样式 */
.price {
  color: #ff4444;
  font-weight: bold;
}

.price-symbol {
  font-size: 28rpx;
}

.price-value {
  font-size: 48rpx;
}

/* 标签样式 */
.status-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #ffffff;
}

.status-pending {
  background-color: #ff9800;
}

.status-paid {
  background-color: #2196f3;
}

.status-timing {
  background-color: #4caf50;
  animation: blink 1.5s infinite;
}

.status-completed {
  background-color: #9e9e9e;
}

@keyframes blink {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
}

/* 文本省略 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 空状态 */
.empty-container {
  padding: 120rpx 0;
  text-align: center;
}

.empty-text {
  color: #999999;
  font-size: 28rpx;
  margin-top: 20rpx;
}
