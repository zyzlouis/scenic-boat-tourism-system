/* pages/scan/scan.wxss */
.container {
  padding-bottom: 40rpx;
}

.staff-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  margin-bottom: 32rpx;
}

.staff-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.staff-info {
  flex: 1;
}

.staff-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.staff-role {
  font-size: 24rpx;
}

.logout-btn {
  padding: 12rpx 24rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 48rpx;
  font-size: 28rpx;
}

.logout-btn:active {
  background-color: rgba(255, 255, 255, 0.3);
}

.scan-section {
  margin-bottom: 32rpx;
}

.scan-card {
  background: linear-gradient(135deg, #07c160 0%, #00a854 100%);
  border-radius: 24rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(7, 193, 96, 0.3);
}

.scan-card:active {
  transform: scale(0.98);
  transition: transform 0.2s;
}

.scan-icon {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 32rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.4);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 0 0 20rpx rgba(255, 255, 255, 0);
  }
}

.scan-icon image {
  width: 120rpx;
  height: 120rpx;
}

.scan-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.scan-tip {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.guide-section {
  margin-bottom: 32rpx;
}

.guide-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  padding: 0 20rpx;
}

.guide-card {
  padding: 32rpx 24rpx;
}

.guide-item {
  display: flex;
  align-items: flex-start;
}

.guide-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.guide-content {
  flex: 1;
}

.guide-step {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.guide-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.quick-actions {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx;
}

.action-button {
  flex: 1;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.action-button:active {
  transform: scale(0.95);
  transition: transform 0.2s;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.action-text {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
}
