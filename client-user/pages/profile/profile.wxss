/* pages/profile/profile.wxss */
.profile-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 30rpx;
  margin-bottom: 20rpx;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 30rpx;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.login-tip {
  margin-top: 10rpx;
}

.avatar-btn {
  padding: 8rpx 24rpx;
  font-size: 24rpx;
  background-color: #07c160;
  color: #ffffff;
  border-radius: 6rpx;
  border: none;
  line-height: 1.5;
}

.avatar-btn::after {
  border: none;
}

.vip-status {
  margin-top: 10rpx;
}

.vip-badge {
  display: inline-block;
  padding: 6rpx 16rpx;
  background: linear-gradient(90deg, #f6d365 0%, #fda085 100%);
  color: #ffffff;
  font-size: 22rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.normal-badge {
  display: inline-block;
  padding: 6rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  font-size: 22rpx;
  border-radius: 20rpx;
}

/* 储值卡区域 */
.balance-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.balance-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.balance-title {
  font-size: 28rpx;
  color: #666666;
}

.refresh-icon {
  color: #1989fa;
  font-size: 32rpx;
}

.refresh-icon.loading {
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.balance-amount {
  font-size: 60rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.balance-stats {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
}

.recharge-btn {
  width: 100%;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 20rpx;
}
