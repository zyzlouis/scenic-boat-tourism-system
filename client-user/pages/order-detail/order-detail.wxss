/* pages/order-detail/order-detail.wxss */
.loading-container {
  padding: 120rpx 0;
  text-align: center;
}

.order-detail {
  padding-bottom: 120rpx;
}

.status-card {
  text-align: center;
  padding: 48rpx 24rpx;
}

.status-tag {
  display: inline-block;
  padding: 12rpx 32rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.status-desc {
  font-size: 28rpx;
  color: #666666;
}

.qrcode-card {
  text-align: center;
  padding: 48rpx 24rpx;
}

.qrcode-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333333;
}

.qrcode-wrapper {
  display: flex;
  justify-content: center;
  margin: 32rpx 0;
}

.qrcode-image {
  width: 400rpx;
}

.qrcode-code {
  font-size: 48rpx;
  font-weight: bold;
  color: #1989fa;
  letter-spacing: 4rpx;
  margin-bottom: 16rpx;
  font-family: 'Courier New', monospace;
}

.qrcode-tip {
  font-size: 24rpx;
  color: #999999;
}

.timing-board {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
}

.timing-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 32rpx;
}

.timing-info {
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  padding: 24rpx;
}

.timing-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  padding: 12rpx 0;
}

.timing-row:last-child {
  margin-bottom: 0;
}

.timing-row.highlight {
  font-size: 32rpx;
  font-weight: bold;
}

.timing-row.warning {
  color: #ffeb3b;
}

.timing-row.total {
  border-top: 2rpx dashed rgba(255, 255, 255, 0.3);
  margin-top: 12rpx;
  padding-top: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.timing-row .label {
  opacity: 0.9;
}

.timing-row .value {
  font-weight: bold;
}

.timing-row .value.price {
  color: #ffeb3b;
  font-size: 36rpx;
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333333;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
  display: flex;
  gap: 20rpx;
}

.cancel-btn {
  flex: 1;
}

.pay-btn {
  flex: 1;
}
