/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
}

/* 轮播图 */
.swiper-section {
  padding: 20rpx 20rpx 0;
}

.swiper-container {
  width: 100%;
  height: 320rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.swiper-image {
  width: 100%;
  height: 320rpx;
  display: block;
}

/* 公告栏 */
.notice-section {
  padding: 20rpx;
}

.notice-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.3s;
}

.notice-bar:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.notice-warning {
  background-color: #fff7e6;
}

.notice-info {
  background-color: #e6f7ff;
}

.notice-urgent {
  background-color: #fff1f0;
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.notice-content {
  flex: 1;
  overflow: hidden;
}

.notice-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.notice-arrow {
  margin-left: 16rpx;
  flex-shrink: 0;
  color: #999999;
}

.header {
  padding: 60rpx 40rpx 40rpx;
  text-align: center;
  color: #ffffff;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.loading-container {
  padding: 120rpx 0;
  text-align: center;
}

.boat-list {
  padding: 20rpx;
}

.boat-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  transition: all 0.3s;
}

.boat-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.boat-image {
  width: 100%;
  height: 400rpx;
  background-color: #f5f5f5;
}

.boat-image image {
  width: 100%;
  height: 100%;
}

.boat-info {
  padding: 32rpx;
}

.boat-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.boat-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.boat-capacity {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 24rpx;
}

.boat-capacity .icon {
  margin-right: 8rpx;
}

.price-info {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}

.price-row:last-child {
  margin-bottom: 0;
}

.price-row .label {
  color: #666666;
}

.price-row .price {
  color: #ff4444;
  font-weight: bold;
  font-size: 32rpx;
}

.boat-action {
  margin-top: 24rpx;
}

.rent-button {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  border: none !important;
}
