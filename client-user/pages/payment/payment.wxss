/* pages/payment/payment.wxss */
.payment-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 150rpx;
}

/* 订单信息 */
.order-info {
  background: #ffffff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.order-header {
  margin-bottom: 20rpx;
}

.order-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.order-detail {
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 28rpx;
  color: #666666;
}

.detail-value {
  font-size: 28rpx;
  color: #333333;
}

/* 支付方式 */
.payment-methods {
  margin-bottom: 20rpx;
}

.section-header {
  padding: 30rpx 30rpx 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.method-title {
  display: flex;
  align-items: center;
}

.method-name {
  font-size: 30rpx;
  color: #333333;
  margin-left: 20rpx;
}

.balance-info {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.balance-amount {
  font-size: 24rpx;
  color: #999999;
  margin-top: 6rpx;
}

.insufficient {
  color: #ff6b6b;
}

.mt-20 {
  margin-top: 20rpx;
}

/* 支付金额 */
.payment-amount {
  background: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.amount-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.amount-row.total {
  margin-bottom: 0;
}

.amount-label {
  font-size: 28rpx;
  color: #666666;
}

.amount-value {
  font-size: 28rpx;
  color: #333333;
}

.amount-value.total {
  font-size: 40rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.amount-divider {
  height: 1rpx;
  background: #f0f0f0;
  margin: 20rpx 0;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx 30rpx 40rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.cancel-link {
  text-align: center;
  padding: 20rpx 0;
  margin-bottom: 16rpx;
}

.cancel-link text {
  font-size: 28rpx;
  color: #999999;
  text-decoration: underline;
}
