/* pages/recharge/recharge.wxss */
.recharge-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

/* 充值方案网格 */
.plans-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.plan-card {
  position: relative;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.plan-card.selected {
  border-color: #1989fa;
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  transform: translateY(-4rpx);
  box-shadow: 0 4rpx 16rpx rgba(25, 137, 250, 0.3);
}

.plan-tag {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}

.plan-amount {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.plan-gift {
  font-size: 24rpx;
  color: #ff6b6b;
  margin-bottom: 10rpx;
}

.plan-total {
  font-size: 22rpx;
  color: #999999;
}

/* 充值详情 */
.summary {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.summary-row.total {
  margin-bottom: 0;
}

.summary-label {
  font-size: 28rpx;
  color: #666666;
}

.summary-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
}

.summary-value.highlight {
  color: #ff6b6b;
}

.summary-value.total {
  font-size: 36rpx;
  color: #1989fa;
}

.summary-divider {
  height: 1rpx;
  background: #f0f0f0;
  margin: 20rpx 0;
}

/* 底部 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx 30rpx 40rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.agreement {
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  margin-top: 20rpx;
}

.agreement .link {
  color: #1989fa;
}
